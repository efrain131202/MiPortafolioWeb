---
import { footerLinks } from '../scripts/cards.js';
---

<footer class="text-white py-5 bg-cover bg-center relative" style="background-image: url('/images/moon.jpg');">
    <div class="absolute inset-0 bg-black opacity-60"></div>
    <section class="py-5 relative z-10">
        <div class="flex justify-center flex-wrap gap-4">
            {footerLinks.map(link => (
              <a class="text-white w-16 h-16 flex items-center justify-center rounded-xl text-2xl border-2 border-transparent transition-colors duration-300 hover:border-[#0284c7] hover:text-[#0284c7]" href={link.url} aria-label={link.ariaLabel} target="_blank" rel="noopener noreferrer">
                <img src={link.icon} alt={link.name} class="w-8 h-8" />
              </a>
            ))}
        </div>
    </section>
    <section class="relative z-10">
        <div class="text-center text-base text-white mb-4 mx-8">
            <p>
                &copy; <span id="year"></span> Efrain Cruz Lobato. Todos los derechos
                reservados.
            </p>
        </div>
    </section>
</footer>


<script>
    import "/src/scripts/currentYear.js";
</script>
